<% include ../templates/header %>


<div class="row layoutRow">
    <div class="container">
        <div id="layoutPath" class="col-md-12">
            <ul>
                <li class="layoutPathItem"><a href="/">Home</a></li>
                <li class="layoutPathItem before"><a href="/noticias">Noticias</a></li>
                <li class="layoutPathItem before">Nova Notícia</li>                
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <form id="contentEdit" class="form-horizontal" action="/noticias" method="POST">
      <div class="form-group">
        <div class="col-sm-12">
          <h4>Titulo da Notícia</h4>
        </div>
        <div class="col-sm-12">
          <input name="news[title]" type="text" class="form-control" id="inputTitle" placeholder="Titulo">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <h4>Conteúdo da Notícia</h4>
        </div>        
        <div class="col-sm-12">
          <textarea name="news[body]" id="summernote">
          </textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <a href="/noticias"><div class="btn btn-default">Voltar</div></a>
          <button type="submit" class="btn btn-success">Salvar</button>
        </div>
      </div>
    </form>
</div>




<% include ../templates/footer %>